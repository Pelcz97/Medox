<?xml version="1.0" encoding="UTF-8"?>
<local:CustomContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    xmlns:local="clr-namespace:myMD.View.AbstractPages;assembly=myMD" 
    x:Class="myMD.View.ProfileTabPages.ProfileEditPage" 
    Title="Profil bearbeiten">
    <ContentPage.ToolbarItems>
        <ToolbarItem Name="SaveChangedProfileButton" Text="Fertig" 
        Order="Primary" Clicked="SaveChangedProfileButton_Clicked" />
        <ToolbarItem Name="CancelButton" Text="Abbrechen" 
        Order="Primary" Priority="-1" Clicked="CancelButton_Clicked"/>
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <TableView BackgroundColor="#191928" Intent="Form" 
            VerticalOptions="CenterAndExpand" 
            HorizontalOptions="FillAndExpand"
            RowHeight="80"
            HasUnevenRows="true">
            <TableRoot>
                <TableSection Title="Information">
                    <ViewCell >
                        <StackLayout Orientation="Vertical" 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Label Text="Nachname" 
                                HorizontalTextAlignment="Start" 
                                VerticalTextAlignment="Center" 
                                TextColor="White" 
                                Margin="15,5,0,0" 
                                FontSize="Small" />
                            <Entry HorizontalOptions="FillAndExpand" 
                                VerticalOptions="CenterAndExpand" 
                                BackgroundColor="#191928" 
                                Placeholder="Name" 
                                PlaceholderColor="Gray" 
                                TextColor="White" 
                                Margin="15,0,15,10" 
                                FontSize="Medium" 
                                Text="{Binding LastName}" />
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Label Text="Vorname" 
                                HorizontalTextAlignment="Start" 
                                VerticalTextAlignment="Center" 
                                TextColor="White" 
                                Margin="15,0,0,0" 
                                FontSize="Small" />
                            <Entry HorizontalOptions="FillAndExpand" 
                                VerticalOptions="CenterAndExpand" 
                                BackgroundColor="#191928" 
                                Placeholder="Vorname" 
                                PlaceholderColor="Gray" 
                                TextColor="White" 
                                Margin="15,0,15,0" 
                                FontSize="Medium" Text="{Binding Name}"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Label Text="Geburtstag" 
                                HorizontalTextAlignment="Start" 
                                VerticalTextAlignment="Center" 
                                TextColor="White" 
                                Margin="15,0,0,0" 
                                FontSize="Small" />
                            <DatePicker HorizontalOptions="End" 
                                VerticalOptions="Center" 
                                IsVisible="true" 
                                BackgroundColor="#191928" 
                                TextColor="White" 
                                Margin="0,0,15,0" Date="{Binding Birthdate}"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Label Text="Versicherungsnummer" 
                                HorizontalTextAlignment="Start" 
                                VerticalTextAlignment="Center" 
                                TextColor="White" 
                                Margin="15,0,0,0" 
                                FontSize="Small" />
                            <Entry HorizontalOptions="FillAndExpand" 
                                VerticalOptions="CenterAndExpand" 
                                BackgroundColor="#191928" 
                                Placeholder="Versicherungsnummer" 
                                PlaceholderColor="Gray" 
                                Keyboard="Default" 
                                Margin="15,0,15,0" 
                                TextColor="White" 
                                FontSize="Medium" Text="{Binding InsuranceNumber}"/>
                        </StackLayout>
                    </ViewCell>
                    <ViewCell>
                        <StackLayout Orientation="Vertical" 
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand">
                            <Label Text="Blutgruppe" 
                                HorizontalTextAlignment="Start" 
                                VerticalTextAlignment="Center" 
                                TextColor="White" 
                                Margin="15,0,0,0" 
                                FontSize="Small" />
                            <Picker x:Name="BlutgruppenPicker" 
                                Title="Blutgruppe" 
                                HorizontalOptions="End" 
                                Margin="0,0,15,0" 
                                VerticalOptions="Center" 
                                IsVisible="true" 
                                BackgroundColor="#191928" 
                                TextColor="White">
                                <Picker.Items>
                                    <x:String>0 +</x:String>
                                    <x:String>0 -</x:String>
                                    <x:String>A +</x:String>
                                    <x:String>A -</x:String>
                                    <x:String>B +</x:String>
                                    <x:String>B -</x:String>
                                    <x:String>AB +</x:String>
                                    <x:String>AB -</x:String>
                                </Picker.Items>
                                <Picker.SelectedIndex>7</Picker.SelectedIndex>
                            </Picker>
                        </StackLayout>
                    </ViewCell>
                </TableSection>
            </TableRoot>
        </TableView>
    </ContentPage.Content>
</local:CustomContentPage>