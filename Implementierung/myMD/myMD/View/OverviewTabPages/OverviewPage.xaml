<?xml version="1.0" encoding="UTF-8"?>
<local:CustomContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="myMD.View.OverviewTabPages.OverviewPage"
    xmlns:local="clr-namespace:myMD.View.AbstractPages;assembly=myMD"
    Title="Ãœbersicht">

    <ContentPage.ToolbarItems>
        <ToolbarItem Name="EditButton" Text="Bearbeiten" Order="Primary" />
    </ContentPage.ToolbarItems>
    
    <ContentPage.Content>
        <StackLayout>
            <ListView RowHeight="160" BackgroundColor="#191928">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.View>
                                <Frame x:Name="Label" CornerRadius="15" 
                                        BackgroundColor="#FFFFFF" Margin="10"
                                        HorizontalOptions="CenterAndExpand" 
                                        VerticalOptions="CenterAndExpand" 
                                        HeightRequest="65" 
                                        WidthRequest="400">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                                <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/> 
                                                </Grid.ColumnDefinitions>

                                            <Label Text="Dr. Michael Schnabel" TextColor="#191928" 
                                            FontSize="Small" FontAttributes="Bold"
                                                Grid.Column="0" Grid.RowSpan="2"   Grid.Row="0" HorizontalTextAlignment="Start" />
                                        
                                            <Label Text="20. September 2017" TextColor="#4A4A4A" 
                                            FontSize="Small" HorizontalTextAlignment="End" FontAttributes="Bold" 
                                                  Grid.Column="1" Grid.Row="0" HorizontalOptions="EndAndExpand"/>
                                        
                                            <Label Text="Hausarzt" TextColor="#00B9B4" FontSize="35" 
                                            FontAttributes="Bold" HorizontalTextAlignment="Start" 
                                                 Grid.ColumnSpan="2" Grid.Row="1" />
                                    </Grid>
                                </Frame>
                            </ViewCell.View>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</local:CustomContentPage>
