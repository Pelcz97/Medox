<?xml version="1.0" encoding="UTF-8"?>
<local:CustomContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
    x:Class="myMD.View.SendDataTabPages.SendDataPage"
    xmlns:local="clr-namespace:myMD.View.AbstractPages;assembly=myMD"
    Title="Senden">
    <ContentPage.Content>
        <Grid x:Name="Grid" RowSpacing="1" ColumnSpacing="1" Margin="15,0,15,15">
            <Grid.RowDefinitions>
                <!--Durch Benutzung des *'s wird der Button immer am unteren Ende der Seite dargestellt-->
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Text="Das Senden deiner Daten erfolgt drathlos Ã¼ber Bluetooth. &#10;&#10; Achte deshalb darauf, Bluetooth im Control Center zu aktivieren und in Reichweite deines Arztes zu sein."
                   AutomationId="Hinweis"
                   Grid.Row="0"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"
                   TextColor="White"/>
            
            <Button Clicked="ReceiveDataButton_Clicked"
                    AutomationId="ReceiveDataButton"
                    IsEnabled="{Binding ReceiveLettersButton_Enabled}"
                    Text="Arztbriefe empfangen"
                    TextColor="White"
                    FontAttributes="Bold"
                    Grid.Row="1"
                    BackgroundColor="#00B9B4"
                    HorizontalOptions="Center"
                    VerticalOptions="EndAndExpand"
                    HeightRequest="50"
                    WidthRequest="400"
                    BorderRadius="10" />
        </Grid>
    </ContentPage.Content>
</local:CustomContentPage>